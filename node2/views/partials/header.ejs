<style>
#search-results {
   position: absolute;
   width: auto;
   background: white;
   border-bottom-left-radius: 10px;
   border-bottom-right-radius: 10px;
   max-height: 200px;
   overflow: auto;

   border: 1px solid gray;

   /*This is relative to the navbar now*/
   left: -40%;
   right: 0;
   top: 40px;
   align: "left";
}

</style>
<body>
    <div class="ui fixed inverted menu">
        <div class="ui container">
            <div class="header item">
                <i class=""></i> Restaurant
            </div>
            <a class="item" href="/restaurants">Home</a>
            <a class="item" href="/restaurants/new">Creat New Restaurant</a>
            <a class="item" href="/logout">Logout</a>
            <input type="search" onkeyup="showResults(this.value)" placeholder="search.." id="search" name="search">
            <div style="position: relative;width: 100%;">
            <div class="border" id="search-results">
            </div>
          </div>
        </div>
    </div>
    <br>
    <br>
<script type="text/javascript" src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js'></script>
